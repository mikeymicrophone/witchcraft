<h1>Listing scrolls</h1>

<table>
  <tr>
    <th>Title</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @scrolls.each do |scroll| %>
  <tr>
    <td><%= link_to scroll.title, scroll %></td>
    <td><%= link_to 'Edit', edit_scroll_path(scroll) %></td>
    <td><%= link_to 'Destroy', scroll, method: :delete, data: { confirm: 'Are you sure?' } %></td>
  </tr>
<% end %>
</table>


<h1>Listing witches</h1>

<table>
  <tr>
    <th>Witch name</th>
    <th>First name</th>
    <th>Last name</th>
    <th>Email</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @witches.each do |witch| %>
  <tr>
    <td><%= witch.witch_name %></td>
    <td><%= witch.first_name %></td>
    <td><%= witch.last_name %></td>
    <td><%= witch.email %></td>
    <td><%= link_to 'Show', witch %></td>
    <td><%= link_to 'Edit', edit_witch_path(witch) %></td>
    <td><%= link_to 'Destroy', witch, method: :delete, data: { confirm: 'Are you sure?' } %></td>
  </tr>
<% end %>
</table>

